{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "strictNullChecks": true,  // temp needed for Mongoose automatic type inference until we enable strict
    "skipLibCheck": true,
    "lib": ["es2022"],
    "types": ["node", "jest"],
    "sourceMap": true ,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": false,
    "logError": true
  }
}
